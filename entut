            <th>Type</th>
            <th>Size</th>
            <th>Permissions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <?php list_files($dir_path, $current_dir); ?>
    </tbody>
</table>

<h2>Actions</h2>

<div class="form-inline">
    <form method="POST" enctype="multipart/form-data">
